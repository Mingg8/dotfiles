[user]
	email = contact@romainpellerin.eu
	name = Romain Pellerin
[color]
	ui = auto
[alias]
  ad = "!f() { git add $1 && git status; }; f"
	st = status
	pom = push origin master
	oneline = log --pretty=oneline --abbrev-commit --graph --decorate
	lc = !git oneline ORIG_HEAD.. --stat --no-merges
	whoistheboss = !git ls-tree -r -z --name-only HEAD -- | xargs -0 -n1 git blame --line-porcelain HEAD |grep  '^author '|sort|uniq -c|sort -nr